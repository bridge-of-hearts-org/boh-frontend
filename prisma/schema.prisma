generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

type Location {
    address               String
    province              String
    district              String
    divisionalSecretariat String
}

type Contact {
    phone   String[]
    email   String[]
    website String?
}

type Residents {
    total  Int?
    male   Int?
    female Int?
}

model ChildCareFacility {
    id        String    @id @default(auto()) @map("_id") @db.ObjectId
    name      String    @unique
    type      String
    managedBy String
    location  Location
    contact   Contact
    residents Residents
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    photos    String[]

    @@map("facilities")
}
